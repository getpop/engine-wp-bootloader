{
    "name": "getpop/engine-wp-bootloader",
    "type": "wordpress-muplugin",
    "description": "PoP Engine Bootloader for WordPress",
    "keywords": [
        "pop",
        "engine",
        "WordPress",
        "bootloader"
    ],
    "homepage": "https://github.com/getpop/engine-wp-bootloader",
    "license": "MIT",
    "authors": [
        {
            "name": "Leonardo Losoviz",
            "email": "leo@getpop.org",
            "homepage": "https://getpop.org"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/leoloso/wp-muplugin-loader.git"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "composer/installers": "~1.0",
        "getpop/hooks-contracts-implementation": "~0.1",
        "getpop/translation-contracts-implementation": "~0.1",
        "getpop/routing-contracts-implementation": "~0.1",
        "lkwdwrd/wp-muplugin-loader": "dev-master"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12",
        "phpunit/phpunit": ">=9.3",
        "rector/rector": "^0.8.17",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "PoP\\EngineWPBootloader\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PoP\\EngineWPBootloader\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests",
        "analyse": "phpstan analyse -c phpstan.neon.dist",
        "downgrade-code": "rector process --dry-run --ansi"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
